@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<Layer.Domian.Entities.DB.Users.UserEntity>
<div class="text-center">
    <h1 class="display-4">SMHZakeri.ir</h1>
    <p>Learn about <a href="https://smhzakeri.ir">S.M.HassanZakeri</a>.</p>
</div>


<div class="container">

    <div class="row">
        <a asp-action="create" asp-controller="home" class="btn btn-success w-25 mb-3" >new +</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{ int counter = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(counter+=1)</th>
                    <td>@item.Name</td>
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>
                        <a  class="btn btn-warning" asp-route-id="@item.ID" asp-action="Edit">Edit</a>
                        <a  class="btn btn-danger" asp-route-id="@item.ID"  asp-action="Delete">Delete</a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>





